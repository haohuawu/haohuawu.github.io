<% if (post.link) { %>
<h1 class="post-title" itemprop="name">
  <a class="post-title--link" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
</h1>
<% } else if (post.title) { %>
  <% if (!is_post()) { %>
<h1 class="post-title" itemprop="name">
  <a class="post-title--link" href="<%- url_for(post.path) %>"><%= post.title %></a>
</h1>
  <% } else { %>
<h1 class="post-title" itemprop="name">
  <%= post.title %>
</h1>
  <% } %>
<% } %>